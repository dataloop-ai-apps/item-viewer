{
    "name": "item-viewer",
    "description": "Dataloop's generic item viewer",
    "categories": [
        "viewer"
    ],
    "icon": "",
    "scope": "project",
    "components": {
        "panels": [
            {
                "name": "item-viewer",
                "supportedSlots": [
                    {
                        "type": "itemViewer",
                        "configuration": {
                            "layout": {
                                "leftBar": false,
                                "rightBar": false,
                                "bottomBar": false
                            }
                        }
                    }
                ],
                "conditions": {
                    "resources": [
                        {
                            "entityType": "item",
                            "filter": {
                                "metadata.system.mimetype": "image/*"
                            }
                        }
                    ]
                }
            }
        ],
        "services": [
        {
            "name": "active-learning-nodes",
            "panelNames": [
                "item-viewer"
            ],
            "runtime": {
                "podType": "regular-xs",
                "runnerImage": "gcr.io/viewo-g/piper/agent/runner/cpu/node14:latest",
                "numReplicas": 1,
                "concurrency": 10,
                "pyPackages": {},
                "autoscaler": {
                    "type": "rabbitmq",
                    "minReplicas": 1,
                    "maxReplicas": 1,
                    "queueLength": 10
                },
                "preemptible": false,
                "executionTimeout": 172800,
                "drainTime": 600,
                "onReset": "failed",
                "runExecutionAsProcess": false
            },
            "maxAttempts": 3
        }
    ]
    }
}